    },
    {
      "path": "./projects/core/tsconfig.spec.json"
    },
    {
      "path": "./projects/ui/tsconfig.lib.json"
    },
    {
      "path": "./projects/ui/tsconfig.spec.json"
    },
    {
      "path": "./projects/models/tsconfig.lib.json"
    },
    {
